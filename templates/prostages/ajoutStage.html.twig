{% extends 'base.html.twig' %}

{% block titrePage %}Ajout d'un stage{% endblock %}

{% block nomBtn %}Ajouter{% endblock %}

{% block contenuPage %}
<div class="col-sm-6">
  <div class="card">
    <div class="card-body">
      <p class="card-text">
        {{form_start(formulaireStage)}}
          {{form_row(formulaireStage.intitule,{'attr':{'placeholder':'Développeur web'}})}}
          <br>

          {{form_row(formulaireStage.mission,{'attr':{'placeholder':'Développer un site web avec le framework Symfony'}})}}
          <br>

          {{form_row(formulaireStage.mail,{'attr':{'placeholder':'reponsableStage@mail.com'}})}}
          <br>
          {{form_row(formulaireStage.formations,{'label':'Sélectionez une ou plusieurs formations concernées'})}}
          <br>

          {{form_row(formulaireStage.entreprise.nom, {'attr':{'placeholder':'IUT de Bayonne et du Pays Basque'}})}}
          <br>

          {{form_row(formulaireStage.entreprise.activite, {'label':'Activité',
                                                     'attr':{'placeholder':'Enseignement'}})}}
          <br>

          {{form_row(formulaireStage.entreprise.adresse, {'attr':{'placeholder':'2 Allée du Parc Montaury, 64600 Anglet'}})}}
          <br>

          {{form_row(formulaireStage.entreprise.site, {'label':'URL du site de l\'entreprise',
                                                 'attr':{'placeholder':'https://www.iutbayonne.univ-pau.fr/'}})}}
          <br>
          <button type="submit" class="btn btn-primary">Enregistrer</button>
        {{form_end(formulaireStage)}}
        <br>
      </p>
    </div>
  </div>
</div>


{% endblock %}
