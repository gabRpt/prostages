<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1"> <!-- Permet le web responsive -->
        <title>{% block title %}Prostages{% endblock %}</title>

        <!-- Intégration de la partie CSS de Bootstrap -->
        {% block stylesheets %}
          <link rel="stylesheet" href="{{asset('/css/bootstrap.min.css')}}">
          <link rel="stylesheet" href="{{asset('/css/fontello.css')}}">
        {% endblock %}

    </head>
    <body>
        <div class="container-fluid">
        <!-- BLOC MENU -->
        {% block menu %}
        <div class="row">
          <div class="col-md-12">
            <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-dark bg-dark">

              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="navbar-nav">
                  <li class="nav-item">
                     <a class="nav-link" href="{{path('prostages_accueil')}}"><i class='icon-home'></i>Accueil</a>
                  </li>
                  <li class="nav-item">
                     <a class="nav-link" href="{{path('prostages_entreprises')}}"><i class='icon-suitcase'></i>Entreprises</a>
                  </li>
                  <li class="nav-item">
                     <a class="nav-link" href="{{path('prostages_formations')}}"><i class='icon-graduation-cap'></i>Formations</a>
                  </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                  <li class="nav-item">
                     <a class="nav-link" href="{{path('prostages_ajoutEntreprise')}}"><i class='icon-address-book'></i>Ajout&Modif Entreprise</a>
                  </li>
                  <li class="nav-item">
                     <a class="nav-link" href="{{path('prostages_ajoutStage')}}"><i class='icon-address-book'></i>Ajout Stage</a>
                  </li>

                  {% if is_granted('ROLE_USER') %}
                    <li class="nav-item">
                       <a class="nav-link" href="{{path('app_logout')}}">{{ app.user.prenom }}<i class='icon-user'></i>Déconnexion</a>
                    </li>
                  {% else %}
                    <li class="nav-item">
                       <a class="nav-link" href="{{path('app_login')}}"><i class='icon-user'></i>Connexion</a>
                    </li>
                  {% endif %}

                </ul>
              </div>
            </nav>
          </div>
        </div>
        {% endblock %}

        <!-- BLOC CONTENU -->
        {% block contenu %}
        <div class="row">
      		<div class="col-md-12">
            <div class="card">
              <h5 class="card-header"></h5>
              <div class="card-body">
                <h5 class="card-title">{% block titrePage %}{% endblock %}</h5>
                <p class="card-text">{% block contenuPage %}{% endblock %}</p>
              </div>
            </div>
      		</div>
      	</div>
        {% endblock %}

        <!-- BLOC FOOTER -->
        {% block footer %}
        <div class="row">
          <div class="col-md-12">
            <p class='text-secondary'>
              Site réalisé avec les frameworks
              <a href="https://symfony.com/">Symfony</a>
              et
              <a href="https://getbootstrap.com/">Bootstrap</a>
            </p>
          </div>
        </div>
        {% endblock %}

        <!-- Intégration de la partie JavaScript de Bootstrap -->
        {% block javascripts %}
          <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
          <script src="{{asset('/js/bootstrap.min.js')}}"></script>
        {% endblock %}
        </div>
    </body>
</html>
